<%- include('partials/header.ejs') %>

  <div class="container">
      <div class="row">
          <div class="col-md-12 mx-auto">
              <div class="mt-5">
                <h3 class="float-left">Movie List</h3>
                <a href="/movies/add" class="btn btn=sm btn-primary float-right">Add Movies</a>
              </div>
              <table class="table table-striped table-bordered">
                <thead>
                  <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Title</th>
                    <th scope="col">Year</th>
                    <th scope="col">Rating</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                    <% movies.forEach(movie => { %>
                        <tr>
                            <td><%= movie.id %></td>
                            <td><%= movie.title %></td>
                            <td><%= movie.year %></td>
                            <td><%= movie.rating %></td>
                            <td><a href="/movies/edit/<%= movie.id %>" class="btn btn-sm btn-info">Edit</a><a href="movies/delete/<%= movie.id %>" class="btn btn-sm btn-danger">Delete</a></td>
                        </tr>
                    <% }) %>
                </tbody>
              </table>
          </div>
      </div>
</div>

  
<%- include('partials/footer.ejs') %>
   