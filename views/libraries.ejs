<%- include('partials/header.ejs') %>

  <div class="container">
      <div class="row">
          <div class="col-md-12 mx-auto">
              <div class="mt-5">
                <h3 class="float-left">Library</h3>
                <a href="/libraries/add" class="btn btn=sm btn-primary float-right">Add Library</a>
              </div>
              <table class="table table-striped table-bordered">
                <thead>
                  <tr>
                    <th scope="col">Lib-ID</th>
                    <th scope="col">Title</th>
                    <th scope="col">Genre</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                    <% libraries.forEach(library => { %>
                        <tr>
                            <td><%= library.id %></td>
                            <td><%= library.Movie.title %></td>
                            <td><%= library.Genre.type %></td>
                            <td><a href="/libraries/edit/<%= library.id %>" class="btn btn-sm btn-info">Edit</a><a href="libraries/delete/<%= library.id %>" class="btn btn-sm btn-danger">Delete</a></td>
                        </tr>
                    <% }) %>
                </tbody>
              </table>
          </div>
      </div>
</div>

  
<%- include('partials/footer.ejs') %>
   